<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NBGGApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Transparent ActionBar style for specific activities -->
    <style name="MyTransparentActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@color/translate_actionbar</item>
    </style>

    <!-- Theme for activities with transparent action bar -->
    <style name="Theme.NBGGApp.TransparentActionBar" parent="Theme.NBGGApp">
        <item name="actionBarStyle">@style/MyTransparentActionBar</item>
    </style>
</resources>